# Cloudflare API credentials
# Use API Token for Bearer authentication (preferred method)
CLOUDFLARE_API_TOKEN=your-api-token

# Cloudflare zone and record IDs
# Zone ID can be found in the Cloudflare dashboard under your domain's "Overview" tab
ZONE_ID=your-zone-id
# DNS Record ID can be found in the DNS tab after clicking on the record
# This is now optional - if not provided, the script will attempt to find it automatically using the DOMAIN_NAME
# DNS_RECORD_ID=your-dns-record-id

# Domain configuration
DOMAIN_NAME=your-domain.com
RECORD_TYPE=A
TTL=3600
PROXIED=false

# Script settings
CHECK_INTERVAL=300  # Check every 5 minutes (in seconds)

# Log rotation settings
LOG_MAX_SIZE=1048576  # Maximum log file size in bytes (1 MB default)
LOG_BACKUP_COUNT=3    # Number of backup log files to keep 